  </main>
<!-- Aca van a ir las resenas de las series, lo habia hecho con Bootstrap y no puede usar bootstrap al mismo tiempo que ulkit?-->
<div class="uk-flex uk-flex-column" style="display: flex; align-items: center;justify-content: center;">
<button id="boton-resenas" type="send" name="resenas" style="margin: 3%;"><strong>Ver reseñas</strong></button>
<div class="Resenas" style="width: 100%;display: none;">
 
 <!--! recorre todo el objeto "todo" y si es nulo pone no hay resenas-->
  <% if (todo.length == 0) { %>
    <h2 style="color: white; text-align: center;"><strong>No hay reseñas, quieres agregar una?</strong></h2>
  <% } else { %>
  <br>
<div>
  <!--Todo tiene un length por ende hay un for que recorre e imprime todas las resenas correspondientes-->
     <% for(let i = 0; i < todo.length; i++) { %>
            <div>
              <div class="uk-card uk-card-default uk-width-1-2@m" id="caja-resena">
                <div class="uk-card-header">
                  <div class="uk-grid-small uk-flex-middle" uk-grid>
                    <div class="uk-width-expand">
                      <h3 class="uk-card-title uk-margin-remove-bottom">Title:</h3>
                      <p><%= todo[i].title%></p>
                    </div>
                  </div>
                </div>
                <div class="uk-card-header">
                  <h3>Description:</h3>
                  <p><strong><%= todo[i].description%></strong></p>
                </div>
                <div class="uk-card-body">
                  <h3>Rating:</h3>
                  <p><strong><%= todo[i].rating%></strong></p>
                </div>
                <div class="uk-card-footer">
                  <h3>Publicado por:</h3>
                  <p>
                    <time datetime="2016-04-01T19:00"
                      ><p><strong><%= todo[i].username%></strong></p></time
                    >
                  </p>
                </div>
                <div class="uk-card-footer">
                  <h3>Publicado el:</h3>
                  <p>
                    <time datetime="2016-04-01T19:00"
                      ><p><strong><%= todo[i].createdAt%></strong></p></time
                    >
                  </p>
                </div>
              </div>
                </div>
                <br>
                <br>
    <% } %>
</div>
<% } %>
</div>
<!--TODO reenvia a un formulario que esta en add.ejs correspondiente al movie_id-->
<a href="/info_serie/add/<%=movie_id%>">
  <button class="uk-button uk-button-primary uk-margin-medium-bottom"> Crea uno!</button>
</a>
</div>
</div>
      </div>
</body>

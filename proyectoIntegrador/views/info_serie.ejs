  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta charset="utf-8">
  <title>Detalles de la serie</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.2.2/dist/css/uikit.min.css" />
  <link rel="stylesheet" href="/stylesheets/info_series.css">

  <script src="https://kit.fontawesome.com/4710dd3a67.js"></script>
  <!-- uikit -->
  <script src="https://cdn.jsdelivr.net/npm/uikit@3.2.2/dist/js/uikit.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/uikit@3.2.2/dist/js/uikit-icons.min.js"></script>
  <!-- script nuestro -->
  <script type="text/javascript" src="/javascripts/detalle_pelis.js"></script>
  <script type="text/javascript" src="/javascripts/tres-caracteres.js"></script>
  <script type="text/javascript" src="/javascripts/avanzado-api.js"></script>
</head>
<body>
  <!--HEADER-->
<%- include('./partials/head') %>


  <!-- MAIN -->
  <main>

    <h1 id="titulos" class="primero">Detalles de la serie:</h1><!-- la clase primero, le da pading al titulo -->

    <div class="boton1">
      <button type="button" name="button" class="botonFavorito">Agregar a favoritos</button>
    </div>
    <div class="boton2">
      <button type="button" name="button" class="botonFavoritoTarde">Ver más tarde</button>
    </div>

    <div class="foto_conteiner">
      <!-- foto -->
    </div>
    <div class="info_conteiner">
      <!-- info serie por API -->
    </div>
    <div class="trailer_conteiner">
      <!-- aca van los trailers -->
    </div>

    <!-- boton -->
    <button id="boton-recom" type="send" name="recomendaciones" style="display:none"><strong>Ver recomendaciones</strong></button>

    <!-- carrusel ui kits -->
    <div class="Recomendaciones">
      <h2 id="titulos">Recomendaciones:</h2>
      <div uk-slider>
        <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">
          <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m" id="Reco">
            <!-- ACA VA EL API -->
          </ul>
          <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
          <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
        </div>
        <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
      </div>
    </div>
  </main>
<!-- Aca van a ir las resenas de las series, lo habia hecho con Bootstrap y no puede usar bootstrap al mismo tiempo que ulkit?-->
<div class="uk-flex uk-flex-column" style="display: flex; align-items: center;justify-content: center;">
<button id="boton-resenas" type="send" name="resenas"><strong>Ver reseñas</strong></button>
<div class="Resenas" style="display: none">
  <h2 id="titulos"><strong> Lista de reseñas:</strong></h2>

<div>
     <% for(let i = 0; i < todo.length; i++) { %>
            <div>
                    <h3><strong><%= todo[i].title%></strong></h3> 
            <p><em><%= todo[i].description%></em></p>
            <p><em><%= todo[i].createdAt%></em></p>
            <form action="/info_serie/delete/<%= todo[i].resena_id %>" method="POST">
                <button class="uk-button-danger">Delete Resena</button>
            </form>
            <form action="/info_serie/edit/<%= todo[i].resena_id %>" method="GET">
                <button class="uk-button-secondary">Modify</button>
            </form>
              
                </div>
    <% } %>
</div>
</div>

<form action="/info_serie/add" method="GET">
  <button class="uk-button uk-button-primary"> Crea uno!</button>
</form>
</div>
</div>
      </div>
<!-- FOOTER -->
<%- include('./partials/footer') %>
</body>

</html>
